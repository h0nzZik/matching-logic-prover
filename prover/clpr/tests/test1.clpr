inductionlimit(2).
unfolddepthbound(10).

traceleftbound(10).
tracerightbound(3).

declare_unification_type(even, [eq]).

unfold(even(X),
  [
  body([],
       [eq(X, 0)]),
  body([even(Y)],
       [eq(plus(Y, 2), X)])
  ]).

run_test :-
  init_counters,
  addunfoldlevel(0, 0, [even(X)],
                 UnfoldableGAtoms),
  addunfoldlevel(0, 0, [],
                 UnfoldableHAtoms),
  lprove(0, 0, 0,
         [], UnfoldableGAtoms,
         [eq(X, 4)],
         [], UnfoldableHAtoms, 
         [],
         []),
  !,
  show_counters,
  printf("Ex1 is VERIFIED.\n", []).

run :-
  run_test,
  !.

:- consult('../solver_main.clpr').

:- run, halt.
