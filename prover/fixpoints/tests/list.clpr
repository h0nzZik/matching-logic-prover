  GConstraints = [eqset(K, union(F,G)), eqset(inter(F,G), emptyset)],
  HAtoms = [list(H,X,K)],
  lprove(5, GAtoms, GConstraints, HAtoms, []),
  !,
  printf("LL-LIST-LIST is PROVED.\n", []).



